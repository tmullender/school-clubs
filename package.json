{
  "name": "school-clubs",
  "productName": "School Clubs",
  "version": "1.0.0",
  "description": "An app to help assign pupils to clubs",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "debug": "electron-forge start -- --inspect=5878",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Tim Mullender",
    "email": "t.j.mullender@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "school-clubs",
        "icon": "src/images/kps.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "school_clubs"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "csv-parser": "^2.3.2",
    "electron-log": "^3.0.9",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1",
    "fast-csv": "^4.3.6",
    "pdfkit": "^0.10.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-dmg": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "15.5.5"
  }
}
